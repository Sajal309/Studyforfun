<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="com.example.hp.studyforfun.Drive">
    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:columnWidth="100dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"

        android:orientation="horizontal"
        android:padding="0dp"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/drive" />


        <TextView
            android:id="@+id/drive_text"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Drive"
            android:textColor="@color/black"
            android:textSize="17dp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:onClick="new_f"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="0dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/newf" />

            <TextView
                android:onClick="new_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Folder"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </LinearLayout>



        <ImageView
            android:layout_width="25dp"
            android:onClick="search"
            android:layout_height="25dp"
            android:src="@drawable/ip7"
            android:layout_marginStart="0dp"/>


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:src="@drawable/more_black" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="home1"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="0dp"
                android:alpha="0.8"

                android:background="@color/white"
                android:onClick="home1"
                android:scaleType="centerCrop"
                android:src="@drawable/ip5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-light"
                android:onClick="home1"
                android:text="Home"
                android:textColor="#1d1d1d"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="chat1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="chat1"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_margin="0dp"
                    android:alpha="0.8"
                    android:background="@color/white"
                    android:onClick="chat1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ip2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:onClick="chat1"
                    android:text="Messages"
                    android:textColor="#1d1d1d"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-22dp"
                android:layout_marginTop="-12dp"
                android:background="@drawable/badge"
                android:onClick="chat1"
                android:text="12"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#4a4adc"
                android:textSize="10sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="tutorial1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="tutorial1"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"

                    android:background="@color/white"
                    android:onClick="tutorial1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tutorial2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:onClick="tutorial1"
                    android:text="Tutorial"
                    android:textColor="#00f0ca"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-22dp"
                android:layout_marginTop="-12dp"
                android:background="@drawable/badge"
                android:onClick="tutorial1"
                android:text=" "
                android:textAlignment="center"
                android:textColor="#4a4adc"
                android:textSize="10sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="quiz1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="quiz1"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="0dp"
                    android:alpha="0.8"
                    android:background="@color/white"
                    android:onClick="quiz1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ip4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:onClick="quiz1"
                    android:text="Quiz"
                    android:textColor="#1d1d1d"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-21dp"
                android:layout_marginTop="-14dp"
                android:background="@drawable/badge"
                android:onClick="quiz1"
                android:text="new"
                android:textAlignment="center"
                android:textColor="#4a4adc"
                android:textSize="10sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="0dp"
                android:alpha="0.8"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ip3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-light"
                android:text="Upload"
                android:textColor="#1d1d1d"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_l"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27">

        <EditText
            android:id="@+id/folder_name"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="5dp"

            android:hint="Folder name"
            android:inputType="textPersonName"
            android:paddingStart="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:onClick="folder"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="0dp"
            android:text="Create New Folder"
            android:background="@drawable/button2"

            android:padding="10dp"
            android:textSize="13sp"

            android:textColor="#ffffff" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_l"
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:background="@color/white"

        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/search1"
            android:layout_width="match_parent"
            android:layout_height="67dp"

            android:layout_marginEnd="0dp"
            android:focusableInTouchMode="true"
            android:layout_marginStart="0dp"
            android:paddingLeft="10dp"

            android:background="@color/white"
            android:hint="search"
            app:layout_constraintBottom_toTopOf="@+id/search_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ListView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="205dp"

            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
