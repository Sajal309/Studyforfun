<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/a"
            android:visibility="visible"/>
     <RelativeLayout
         android:id="@+id/video"
         android:layout_width="match_parent"
         android:layout_height="300dp"
         android:visibility="gone"
         >
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center_horizontal"
    >
            <VideoView
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="match_parent"



                />
</RelativeLayout>
     </RelativeLayout>

        <TextView
            android:id="@+id/descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:alpha="0.9"
            android:text="Tech Workshop by JEC Studnets"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="30dp"
            android:paddingBottom="5dp"
            android:text="100k views"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="-10dp"
                android:gravity="center"
                android:onClick="home1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/up1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"

                    android:scaleType="centerCrop"

                    android:src="@drawable/up1" />

                <ImageButton
                    android:id="@+id/up2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"

                    android:scaleType="centerCrop"

                    android:src="@drawable/up2" />

                <TextView
                    android:id="@+id/up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="44 Up"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/down1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"

                    android:scaleType="centerCrop"
                    android:src="@drawable/down1" />
                <ImageButton
                    android:id="@+id/down2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"

                    android:scaleType="centerCrop"
                    android:src="@drawable/down2" />

                <TextView
                    android:id="@+id/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="15 Down"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="1dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/person"
                    app:civ_border_color="#6414c8"
                    app:civ_border_width="0.4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mahesh sharma"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginStart="10dp"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/verified" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="12M"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="normal" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="people Joined"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="normal" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:onClick="write"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:alpha="0.8"
                    android:scaleType="centerCrop"
                    android:src="@drawable/react" />

                <TextView
                    android:onClick="write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="React"
                    android:padding="5dp"
                    android:alpha="0.8"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:onClick="share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:alpha="0.8"
                    android:src="@drawable/share1" />

                <TextView
                    android:onClick="share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:alpha="0.8"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:onClick="add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:alpha="0.8"
                    android:src="@drawable/add" />

                <TextView
                    android:onClick="add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to drive"
                    android:paddingTop="5dp"
                    android:alpha="0.8"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:padding="5dp"
                android:layout_gravity="end"
                android:layout_marginStart="20dp">

                <Button
                    android:id="@+id/join"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="-1dp"
                    android:text="Join"
                    android:background="@drawable/button2"/>
                <Button
                    android:id="@+id/joined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Joined"
                />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:orientation="horizontal"/>

    </LinearLayout>




</ScrollView>