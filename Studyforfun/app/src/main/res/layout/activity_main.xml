<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.hp.studyforfun.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ListView
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"

            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:divider="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"

        android:layout_marginBottom="50dp"
        android:background="@drawable/shadow"
        android:elevation="3dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:paddingTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:background="@color/white"
            android:gravity="center"

            android:orientation="vertical">

            <ImageButton
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:layout_margin="0dp"
                android:onClick="home1"

                android:background="@color/white"

                android:scaleType="centerCrop"
                android:src="@drawable/home2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-light"
                android:onClick="home1"
                android:text="Home"
                android:textColor="#121294"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="chat1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="chat1"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_margin="0dp"

                    android:alpha="0.8"
                    android:background="@color/white"
                    android:onClick="chat1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ip2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:onClick="chat1"
                    android:text="Messages"
                    android:textColor="#1d1d1d"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-22dp"
                android:layout_marginTop="-12dp"
                android:background="@drawable/badge"
                android:onClick="chat1"
                android:text="12"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#4a4adc"
                android:textSize="10sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="tutorial1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="tutorial1"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="0dp"
                    android:alpha="0.8"
                    android:background="@color/white"
                    android:onClick="tutorial1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ip1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:onClick="tutorial1"
                    android:text="Tutorial"
                    android:textColor="#1d1d1d"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-22dp"
                android:layout_marginTop="-12dp"
                android:background="@drawable/badge"
                android:onClick="tutorial1"
                android:text=" "
                android:textAlignment="center"
                android:textColor="#4a4adc"
                android:textSize="10sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="quiz1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:onClick="quiz1"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_margin="0dp"
                    android:alpha="0.8"
                    android:background="@color/white"
                    android:onClick="quiz1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ip4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:onClick="quiz1"
                    android:text="Quiz"
                    android:textColor="#1d1d1d"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-21dp"
                android:layout_marginTop="-14dp"
                android:background="@drawable/badge"
                android:onClick="quiz1"
                android:text="new"
                android:textAlignment="center"
                android:textColor="#4a4adc"
                android:textSize="10sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="25dp"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="upload1"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_margin="0dp"
                android:alpha="0.8"
                android:background="@color/white"
                android:onClick="upload1"
                android:scaleType="centerCrop"
                android:src="@drawable/ip3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-light"
                android:onClick="upload1"
                android:text="Upload"
                android:textColor="#1d1d1d"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/search1"
            android:layout_width="match_parent"
            android:layout_height="67dp"

            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/white"
            android:focusableInTouchMode="true"

            android:hint="search"
            android:paddingLeft="10dp"
            app:layout_constraintBottom_toTopOf="@+id/search_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ListView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />
    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <ImageView
                android:id="@+id/search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="4dp"
                android:layout_toStartOf="@+id/more"
                android:onClick="search"
                android:src="@drawable/ip7" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:onClick="more"
                android:src="@drawable/more_black" />


        </RelativeLayout>


    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
