<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">





        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/user"
                android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginTop="4dp"
                android:text="Mahesh sharma"
                android:layout_marginStart="20dp"
                android:textColor="#404040"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="#707070"
                android:textStyle="bold"
                android:alpha="0.7"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:text="4 days ago"/>
            </LinearLayout>



            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/person"
                app:civ_border_color="#6414c8"
                app:civ_border_width="0.4dp" />
        </RelativeLayout>



        <TextView
            android:id="@+id/react"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="20dp"
            android:paddingEnd="10dp"
         android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="Hey this workshop is very good i had heard about it by my friend sajal."
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
         android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shadow"
        android:elevation="3dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</RelativeLayout>

